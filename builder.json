{
    "name": "aws-crt-ruby",
    "packages": [],
    "build_steps": [
        "ruby -v",
        "gem install bundler",
        "cd aws-crt && bundle install",
        "cd aws-crt && bundle exec rake spec"
    ],
    "hosts": {
        "macos": {
            "_comment": "ruby already installed",
            "!packages": []
        },
        "linux": {
            "build_env": {
                "_comment": "help s2n find libcrypto.a, compiled with -fPIC",
                "CMAKE_INCLUDE_PATH": "/opt/openssl/include",
                "CMAKE_LIBRARY_PATH": "/opt/openssl/lib"
            },
            "packages": ["ruby-dev"]
        }
    }
}
