{
    "name": "aws-crt-ruby",
    "packages": [],
    "build_steps": [
        "ruby -v",
        "gem install bundler",
        "cd aws-crt && bundle install",
        "cd aws-crt && bundle exec rake spec"
    ],
    "hosts": {
        "macos": {
            "_comment": "ruby already installed",
            "!packages": []
        },
        "linux": {
            "build_env": {
                "LibCrypto_LIBRARY": "/opt/openssl/lib",
                "LibCrypto_INCLUDE_DIR": "/opt/openssl/include"
            }
        }
    }
}
